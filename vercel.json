{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/manifest",
      "dest": "/api/manifest.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/hakkimizda",
      "dest": "/hakkimizda.html"
    },
    {
      "src": "/gizlilik-politikasi",
      "dest": "/gizlilik-politikasi.html"
    },
    {
      "src": "/iletisim",
      "dest": "/iletisim.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 